<script>
  document.addEventListener("DOMContentLoaded", () => {
    const usernameInput = document.getElementById('username');
    const profilePicture = document.getElementById('miithing');

    // Add event listener to capture changes in the username input
    usernameInput.addEventListener('input', (event) => {
      const username = event.target.value;

      // Update the profile picture dynamically
      if (username) {
        const profilePictureURL = `https://mii-unsecure.ariankordi.net/render.png?input_type=pnid&nnid=${username}&api_id=1&force_refresh=1&type=face&expression=normal&width=256&scale=2&bgColor=%23ffffff`;
        profilePicture.src = profilePictureURL;
      }
    });
  });
</script>